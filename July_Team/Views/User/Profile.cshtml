@using Microsoft.AspNetCore.Identity
@model IdentityUser
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizar

@{
    ViewData["Title"] = Localizar["Profile"];

    var roles = ViewBag.Roles as IList<string>;
}

<div class="store-page-background" style="min-height: 80vh; display: flex; align-items: center;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card product-card-simple p-4 shadow-lg" style="border-radius: 30px; border: none; background: rgba(255, 255, 255, 0.9);">
                    <div class="card-body text-center">
                        <div class="mb-4">
                            <div class="profile-avatar-container mx-auto mb-3" style="width: 120px; height: 120px; background: #032ba7; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-size: 3rem; box-shadow: 0 10px 20px rgba(3, 43, 167, 0.2);">
                                <i class="bi bi-person-fill"></i>
                            </div>
                            <h2 style="color: #032ba7; font-weight: bold;">@Localizar["Profile"]</h2>
                            <p class="text-muted">@Localizar["WelcomeBack"], @Model.UserName</p>
                        </div>

                        <hr style="border-top: 2px solid #e3e8f8; opacity: 1; margin: 30px 0;">

                        <div class="row text-start px-md-5">
                            <div class="col-sm-4 fw-bold" style="color: #032ba7;">@Localizar["UserName"]:</div>
                            <div class="col-sm-8 mb-3">@Model.UserName</div>

                            <div class="col-sm-4 fw-bold" style="color: #032ba7;">@Localizar["Email"]:</div>
                            <div class="col-sm-8 mb-3">@Model.Email</div>

                            <div class="col-sm-4 fw-bold" style="color: #032ba7;">@Localizar["Roles"]:</div>
                            <div class="col-sm-8 mb-3">
                                @if (roles != null && roles.Any())

                                {
                                    @foreach (var role in roles)

                                    {
                                        <span class="badge rounded-pill px-3 py-2 me-1" style="background-color: #032ba7;">@role</span>
                                    }
                                }

                                else

                                {
                                    <span class="badge rounded-pill px-3 py-2 bg-secondary">@Localizar["NoRoles"]</span>
                                }
                            </div>
                        </div>

                        <div class="mt-5">
                            <form asp-action="Logout" asp-controller="User" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger rounded-pill px-5 py-2 shadow-sm">
                                    <i class="bi bi-box-arrow-right me-2"></i> @Localizar["Logout"]
                                </button>
                            </form>
                            <button type="button" id="powerBtn" class="btn btn-info rounded-pill px-5 py-2 shadow-sm ms-2" onclick="showMyPermissions()">
                                <i class="bi bi-shield-check me-2"></i> My Privileges 🔍
                            </button>
                            <div id="permissionsResult" class="mt-4" style="display:none;">
                                <div class="card shadow-lg" style="border-radius: 20px; border: none; overflow: hidden;">
                                    <div id="permissionHeader" class="card-header text-white py-3">
                                        <h5 class="mb-0 text-center">
                                            <i class="bi bi-person-check me-2"></i> @Localizar["WelcomeBack"], <span id="displayUserName"></span>
                                        </h5>
                                    </div>
                                    <div id="rolesContainer" class="card-body bg-white">
                                    </div>
                                </div>
                            </div>
                            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary rounded-pill px-5 py-2 ms-2 shadow-sm" style="border-color: #032ba7; color: #032ba7;">
                                <i class="bi bi-house-door me-2"></i> @Localizar["NavHome"]
                            </a>
                            @if (User.IsInRole("super admin"))

                            {
                                <a asp-controller="User"
                                   asp-action="Edit_Role"
                                   asp-route-userId="@Model.Id"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-shield-lock"></i> Edit User Privileges
                                </a>
                            }


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .profile-avatar-container i {
            line-height: 1;
        }
        .product-card-simple {
            transition: transform 0.3s ease;
        }
        .product-card-simple:hover {
            transform: translateY(-5px);
        }

        #permissionsResult {
            border-radius: 20px;
            overflow: hidden;
            border: 2px solid #e3e8f8;
        }

        .permission-item {
            transition: all 0.2s ease;
        }

            .permission-item:hover {
                background-color: #ffffff !important;
                transform: scale(1.02);
                box-shadow: 0 4px 8px rgba(3, 43, 167, 0.1) !important;
            }

        .card-header {
            border-bottom: none;
        }

        #rolesContainer {
            max-height: 400px;
            overflow-y: auto;
            padding: 20px;
        }
            /* تحسين شكل الـ Scrollbar */
            #rolesContainer::-webkit-scrollbar {
                width: 6px;
            }

            #rolesContainer::-webkit-scrollbar-thumb {
                background-color: #032ba7;
                border-radius: 10px;
            }

        .permission-item:hover {
            background-color: #ffffff !important;
            border-color: #032ba7 !important;
            transform: translateX(5px); /* تحريك بسيط لليمين يعطي إيحاء بالدخول */
            box-shadow: 0 5px 15px rgba(3, 43, 167, 0.1) !important;
        }

        .permission-item i.bi-chevron-right {
            transition: transform 0.3s;
        }

        .permission-item:hover i.bi-chevron-right {
            transform: translateX(3px);
            color: #032ba7 !important;
        }
    </style>


   
}
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function showMyPermissions() {
            // استخدام Url.Action لضمان المسار الصحيح في مشروع July_Team
            $.get('@Url.Action("GetRoleDetails", "User")', function (data) {
                if (data.success) {
                    $('#displayUserName').text(data.userName);

                    // تحديد اللون بناءً على الرتبة
                    let primaryRole = data.roles[0].roleName.toLowerCase();
                    let themeColor = "#032ba7";
                    if (primaryRole.includes("admin")) themeColor = "#dc3545";
                    else if (primaryRole.includes("trainer")) themeColor = "#198754";

                    $('#powerBtn').css('background-color', themeColor).css('border-color', themeColor);
                    $('#permissionHeader').css('background-color', themeColor);

                    let html = '';
                    data.roles.forEach(role => {
                        html += `
                                <div class="role-section mb-4 text-start">
                                    <div class="d-flex align-items-center mb-2">
                                        <span class="badge rounded-pill px-3 py-2 shadow-sm" style="background-color: ${themeColor};">
                                            <i class="bi bi-shield-shaded me-1"></i> ${role.roleName}
                                        </span>
                                    </div>
                                    <p class="text-muted small ms-2 mb-3">${role.description || ''}</p>
                                    <div class="row g-2">`;

                        role.permissions.forEach(permission => {
                            let targetUrl = "#";
                            let icon = "bi-check-circle";

                            // منطق تحديد الروابط بناءً على نص الصلاحية
                            if (permission.includes("Users")) { targetUrl = "/User/Edit_Role"; icon = "bi-people"; }
                            else if (permission.includes("Roles")) { targetUrl = "/Admin/Adminindex"; icon = "bi-shield-lock"; }
                            else if (permission.includes("Products")) { targetUrl = "/Products/Adminindex"; icon = "bi-cart"; }
                            else if (permission.includes("Orders")) { targetUrl = "/Orders/Adminindex"; icon = "bi-bag-check"; }
                            else if (permission.includes("Courses")) { targetUrl = "/Courses/Adminindex"; icon = "bi-book"; }

                            html += `
                                    <div class="col-md-6">
                                        <a href="${targetUrl}" class="text-decoration-none">
                                            <div class="permission-item p-3 border rounded-3 d-flex align-items-center shadow-sm mb-2"
                                                 style="background: #f8faff; transition: 0.3s; border-color: #e3e8f8 !important;">
                                                <i class="bi ${icon} text-primary me-3" style="font-size: 1.2rem;"></i>
                                                <div class="flex-grow-1">
                                                    <span class="d-block fw-bold" style="font-size: 0.85rem; color: #032ba7;">${permission}</span>
                                                    <small class="text-muted" style="font-size: 0.7rem;">انقر للذهاب</small>
                                                </div>
                                                <i class="bi bi-chevron-right text-muted small"></i>
                                            </div>
                                        </a>
                                    </div>`;
                        });
                        html += `</div></div>`;
                    });

                    $('#rolesContainer').html(html);
                    $('#permissionsResult').slideDown();
                } else {
                    alert("خطأ: " + data.message);
                }
            }).fail(function () {
                alert("تعذر الوصول للمسار. تأكدي أن الكنترولر User يحتوي على GetRoleDetails");
            });
        }
    </script>
}