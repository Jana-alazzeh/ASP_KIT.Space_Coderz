@using Microsoft.AspNetCore.Identity
@model IdentityUser
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizar

@{
    ViewData["Title"] = Localizar["Profile"];

    var roles = ViewBag.Roles as IList<string>;
}

<div class="store-page-background" style="min-height: 80vh; display: flex; align-items: center;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card product-card-simple p-4 shadow-lg" style="border-radius: 30px; border: none; background: rgba(255, 255, 255, 0.9);">
                    <div class="card-body text-center">
                        <div class="mb-4">
                            <div class="profile-avatar-container mx-auto mb-3" style="width: 120px; height: 120px; background: #032ba7; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-size: 3rem; box-shadow: 0 10px 20px rgba(3, 43, 167, 0.2);">
                                <i class="bi bi-person-fill"></i>
                            </div>
                            <h2 style="color: #032ba7; font-weight: bold;">@Localizar["Profile"]</h2>
                            <p class="text-muted">@Localizar["WelcomeBack"], @Model.UserName</p>
                        </div>

                        <hr style="border-top: 2px solid #e3e8f8; opacity: 1; margin: 30px 0;">

                        <div class="row text-start px-md-5">
                            <div class="col-sm-4 fw-bold" style="color: #032ba7;">@Localizar["UserName"]:</div>
                            <div class="col-sm-8 mb-3">@Model.UserName</div>

                            <div class="col-sm-4 fw-bold" style="color: #032ba7;">@Localizar["Email"]:</div>
                            <div class="col-sm-8 mb-3">@Model.Email</div>

                            <div class="col-sm-4 fw-bold" style="color: #032ba7;">@Localizar["Roles"]:</div>
                            <div class="col-sm-8 mb-3">
                                @if (roles != null && roles.Any())

                                {
                                    @foreach (var role in roles)

                                    {
                                        <span class="badge rounded-pill px-3 py-2 me-1" style="background-color: #032ba7;">@role</span>
                                    }
                                }

                                else

                                {
                                    <span class="badge rounded-pill px-3 py-2 bg-secondary">@Localizar["NoRoles"]</span>
                                }
                            </div>
                        </div>

                        <div class="mt-5">
                            <form asp-action="Logout" asp-controller="User" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger rounded-pill px-5 py-2 shadow-sm">
                                    <i class="bi bi-box-arrow-right me-2"></i> @Localizar["Logout"]
                                </button>
                            </form>
                            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary rounded-pill px-5 py-2 ms-2 shadow-sm" style="border-color: #032ba7; color: #032ba7;">
                                <i class="bi bi-house-door me-2"></i> @Localizar["NavHome"]
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .profile-avatar-container i {
            line-height: 1;
        }
        .product-card-simple {
            transition: transform 0.3s ease;
        }
        .product-card-simple:hover {
            transform: translateY(-5px);
        }
    </style>
}
