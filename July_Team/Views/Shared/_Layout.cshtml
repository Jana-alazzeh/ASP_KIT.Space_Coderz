                            </a>
                        </li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Orders" asp-action="MyOrders">
                                    <i class="bi bi-list-check"></i> My Orders
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Profile">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name.Split('@')[0]
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> @Localizar["Login"]
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        <div class="language-switch">
                            @{
                                var currentCulture = System.Globalization.CultureInfo.CurrentUICulture.Name;
                            }
                            @if (currentCulture.StartsWith("ar"))
                            {
                                <a class="lang-btn" asp-action="ChangeLanguage" asp-controller="Home" asp-route-culture="en"
                                   asp-route-returnUrl="@Context.Request.Path">En</a>
                            }
                            else
                            {
                                <a class="lang-btn" asp-action="ChangeLanguage" asp-controller="Home" asp-route-culture="ar"
                                   asp-route-returnUrl="@Context.Request.Path">Ar</a>
                            }
                        </div>
                    </ul>
                </div>


        </nav>
    </header>


    <main role="main">
            @RenderBody()
        </div>
    </main>

