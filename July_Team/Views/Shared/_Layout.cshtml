    @await RenderSectionAsync("Scripts", required: false)


    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const navbar = document.querySelector('.navbar');
            const navLinksContainer = document.querySelector('.navbar-nav.flex-grow-1');
            if (!navbar || !navLinksContainer) return;


            document.body.style.paddingTop = `${navbar.offsetHeight + 20}px`;

            const homeSection = document.querySelector('.home-section');
            if (homeSection) {
                homeSection.style.marginTop = `-${navbar.offsetHeight + 20}px`;
            }

            const capsule = document.createElement('div');
            capsule.classList.add('capsule-indicator');
            navLinksContainer.prepend(capsule);

            function moveCapsule(target) {
                if (!target) {
                    capsule.style.opacity = '0';
                    return;
                }
                capsule.style.left = `${target.offsetLeft}px`;
                capsule.style.top = `${target.offsetTop}px`;
                capsule.style.width = `${target.offsetWidth}px`;
                capsule.style.height = `${target.offsetHeight}px`;
                capsule.style.opacity = '1';
            }


            function setActiveLink() {
                const currentPath = window.location.pathname.toLowerCase();
                const allLinks = navLinksContainer.querySelectorAll('.nav-link');
                let activeLink = null;


                for (let link of allLinks) {
                    const linkPath = new URL(link.href).pathname.toLowerCase();
                    if (currentPath === linkPath) {
                        activeLink = link;
                        break;
                    }
                }

                if (!activeLink && currentPath === '/') {

                    activeLink = navLinksContainer.querySelector('a[href="/"], a[href*="/Home/Index"]');
                }


                allLinks.forEach(link => link.classList.remove('active'));
                if (activeLink) {
                    activeLink.classList.add('active');
                }
                moveCapsule(activeLink);
            }
            const sectionsToObserve = [];
            const linksToObserve = navLinksContainer.querySelectorAll('a[href*="#"]');

            linksToObserve.forEach(link => {
                const id = link.getAttribute('href').split('#')[1];
                if (id) {
                    const section = document.getElementById(id);
                    if (section) {
                        sectionsToObserve.push({ link: link, section: section });
                    }
                }
            });

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const correspondingLink = sectionsToObserve.find(s => s.section === entry.target)?.link;
                        if (correspondingLink) {
                            navLinksContainer.querySelectorAll('.nav-link').forEach(l => l.classList.remove('active'));
                            correspondingLink.classList.add('active');
                            moveCapsule(correspondingLink);
                        }
                    }
                });
            }, {
                rootMargin: "-50% 0px -50% 0px"
            });
//

            sectionsToObserve.forEach(item => observer.observe(item.section));

            setTimeout(setActiveLink, 150);
            window.addEventListener('resize', setActiveLink);
        });


    </script>

</body>
</html>
