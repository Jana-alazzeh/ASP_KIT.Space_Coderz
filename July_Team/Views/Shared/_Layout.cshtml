                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">@Localizar["NavHome"]</a></li>
                        <li class="nav-item"><a class="nav-link" href="/#about-us">@Localizar["NavAbout"]</a></li>
                        <li class="nav-item"><a class="nav-link" href="/#services">@Localizar["NavServices"]</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">@Localizar["NavStore"]</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Tasks" asp-action="Index">@Localizar["NavMission"]</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="JoinUs" asp-action="Index">@Localizar["NavJoinUs"]</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="ContactUs" asp-action="Index">@Localizar["NavContact"]</a></li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cart" asp-action="Index">
