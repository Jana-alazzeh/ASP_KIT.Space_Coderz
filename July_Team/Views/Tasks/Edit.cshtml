@* 📁 Views/Tasks/Edit.cshtml (نسخة المهام الشخصية المصححة) *@
@model July_Team.Models.Task

@{
    ViewData["Title"] = "تعديل المهمة";
}

<div class="container mt-5">
    <div class="mx-auto" style="max-width: 700px;">
        <div class="text-center mb-4">
            <h2 style="color: #032ba7; font-weight: bold;">تعديل المهمة</h2>
            <p class="text-muted">يمكنك تحديث تفاصيل المهمة هنا.</p>
        </div>

        <div class="card shadow-sm p-4" style="border-radius: 20px; border: none;">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                @* 🛑 مهم: يجب أن نرسل OwnerId أيضاً لنحافظ على ملكية المهمة *@
                <input type="hidden" asp-for="OwnerId" />

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-bold"></label>
                    <input asp-for="Title" class="form-control" style="border-radius: 10px;" />
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <textarea asp-for="Description" class="form-control" rows="4" style="border-radius: 10px;"></textarea>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="DueDate" class="form-label fw-bold"></label>
                        <input asp-for="DueDate" class="form-control" type="date" style="border-radius: 10px;" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label fw-bold"></label>
                        @* 🛑 الحل لخطأ التعارض: نستخدم الاسم الكامل للـ Enum *@
                        <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<July_Team.Models.TaskStatus>()" style="border-radius: 10px;"></select>
                    </div>
                </div>

                @* 🛑 تم حذف حقل "تعيين المستخدم" لأنه لم يعد ضرورياً *@

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-primary btn-lg" style="background-color: #032ba7; border-radius: 50px;">حفظ التعديلات</button>
                    <a asp-action="Index" class="btn btn-light">العودة إلى القائمة</a>
                </div>
            </form>
        </div>
    </div>
</div>
