@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizar
@model July_Team.Models.Task

@{
    ViewData["Title"] = Localizar["EditTask"];
}

@* Dashboard Wrapper with Soft UI Theme *@
<div class="dashboard-wrapper py-5 fade-in">
    <div class="container">
        <div class="mx-auto" style="max-width: 700px;">

            <div class="text-center mb-5">
                <h1 class="fw-bold text-dark display-6">@Localizar["EditTask"]</h1>
                <p class="text-muted">@Localizar["EditTaskSubtitle"]</p>
            </div>

            <div class="soft-card p-4 p-md-5 shadow-sm bg-white rounded-4 border-0">
                <form asp-action="Edit">
                    @* Hidden fields for logical consistency *@
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="OwnerId" />

                    @* Validation Summary *@
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-4"></div>

                    <div class="mb-4">
                        <label asp-for="Title" class="form-label fw-bold small text-uppercase text-muted">@Localizar["TaskTitle"]</label>
                        <input asp-for="Title" class="form-control form-control-lg rounded-3 border-light bg-light" placeholder="@Localizar["EnterTaskTitle"]" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label fw-bold small text-uppercase text-muted">@Localizar["Description"]</label>
                        <textarea asp-for="Description" class="form-control form-control-lg rounded-3 border-light bg-light" rows="4" placeholder="@Localizar["EnterDescription"]"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="DueDate" class="form-label fw-bold small text-uppercase text-muted">@Localizar["DueDate"]</label>
                            <input asp-for="DueDate" class="form-control form-control-lg rounded-3 border-light bg-light" type="date" />
                            <span asp-validation-for="DueDate" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mt-3 mt-md-0">
                            <label asp-for="Status" class="form-label fw-bold small text-uppercase text-muted">@Localizar["Status"]</label>
                            <select asp-for="Status" class="form-select form-select-lg rounded-3 border-light bg-light" asp-items="Html.GetEnumSelectList<July_Team.Models.TaskStatus>()"></select>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-5">
                        <button type="submit" class="btn btn-primary-gradient btn-pill py-3 fw-bold">
                            @Localizar["SaveChanges"]
                        </button>
                        <a asp-action="Index" class="btn btn-light btn-pill py-2 text-muted">
                            @Localizar["BackToList"]
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}